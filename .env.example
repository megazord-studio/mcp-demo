# AI provider
OPENAI_API_KEY=
# Optional: override default model (defaults to gpt-4o-mini)
OPENAI_MODEL=

# MCP SSE remote server
# Provide your MCP base URL (we will use '/sse' automatically) or the full SSE URL.
# Examples:
#   http://localhost:3000/api/mcp      # base (client will use /sse)
MCP_SSE_URL=
# Optional: JSON object of headers, e.g. {"Authorization":"Bearer xyz"}
#MCP_SSE_HEADERS=

# Required for SSE transport (used by mcp-handler)
# Example: redis://localhost:6379 (use a local Redis or a hosted one)
#REDIS_URL=
